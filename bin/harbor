#!/usr/bin/env ruby

require "rubygems"
require "harbor"

case ARGV[0]
when "setup"   then
  require "harbor/commands/setup"
  Harbor::Commands::Setup.new(ARGV[1], ARGV[2] || ARGV[1]).run
when "console" then
  ENV["ENVIRONMENT"] = ARGV[1] if ARGV[1]
  require "harbor/commands/console"
  IRB.start
else
  puts "harbor #{ARGV[0]} not found!"
  exit 1
end
